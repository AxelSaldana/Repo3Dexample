{
  "buildCommand": "echo 'Static site ready'",
  "outputDirectory": ".",
  "headers": [
    {
      "source": "/(.*)\\.(glb|gltf)$",
      "headers": [
        {
          "key": "Content-Type",
          "value": "model/gltf-binary"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.(js)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    }
  ]
}
